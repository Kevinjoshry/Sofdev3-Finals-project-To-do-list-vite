// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Todo {
  id      Int      @id @default(autoincrement())
  task    String
  done    Boolean  @default(false)
  createdAt DateTime @default(now())
}
